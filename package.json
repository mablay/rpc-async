{
  "name": "rpc-async",
  "version": "1.0.1",
  "description": "Wraps typesafe RPCs (remote procedure calls) around message based protocols. Support for WebSocket, WebWorker, IPC, TCP, UDP, ...",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/index.*",
    "dist/rpc/*",
    "!*.map"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "tsc",
    "esbuild": "esbuild index.ts --bundle --platform=neutral --outfile=index.js",
    "test": "tsx --test-reporter spec --test src/test/*.test.ts",
    "cloc": "npx clock index.js",
    "coverage": "npx c8 pta",
    "packlist": "npm pack --dry-run",
    "deploy": "./publish.sh",
    "cluster": "esbuild example/cluster.ts --bundle --format=esm --platform=node --outdir=build && node build/cluster.js"
  },
  "dependencies": {
    "@occami/events": "^0.1.16"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "esbuild": "^0.15.13",
    "node": "^19.8.1",
    "tap-spec": "^5.0.0",
    "tsx": "^3.12.7",
    "typescript": "^4.9.5",
    "ws": "^8.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mablay/rpc-async.git"
  },
  "keywords": [
    "rpc",
    "async",
    "es6"
  ],
  "author": "marc.ablay@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mablay/rpc-async/issues"
  },
  "homepage": "https://github.com/mablay/rpc-async#readme",
  "typings": "index.d.ts"
}
